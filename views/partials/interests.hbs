{{#if resume.interests}}
<section class="interests-wrapper">
  <div class="detail">
    <h3 class="text-uppercase title"><i class="fa fa-heart"></i>Interests</h3>
    <ul class="list-unstyled">
      {{#resume.interests}}
      <li class="detail-item">
        <div class="detail-item-content">
          <h4 class="category"><strong>{{name}}</strong></h4>
          {{#if keywords}}
          <ul class="list-inline">
            {{#keywords}}<li class="badge badge-pill keyword">{{.}}</li>{{/keywords}}
          </ul>
          {{/if}}
        </div>
      </li>
      {{/resume.interests}}
    </ul>
  </div>
</section>
{{/if}}
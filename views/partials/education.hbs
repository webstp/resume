{{#if resume.education}}
<section class="education-wrapper">
  <div class="detail">
    <h3 class="title text-uppercase"><i class="fa fa-graduation-cap"></i>Education</h3>
    <ul class="list-unstyled">
      {{#resume.education}}
      <li class="detail-item">
        <div class="detail-item-content">
          <div class="detail-item-header">
            {{#if institution}}
              <h4><strong>{{institution}}</strong></h4>
            {{/if}}

            {{#if startDate}}
            <span class="text-muted">
              <small>
                <time datetime="{{startDate}}">{{formatDate startDate}}</time>&nbsp;â€”&nbsp;
                {{#if endDate}}
                <time datetime="{{endDate}}">{{formatDate endDate}}</time>
                {{else}}
                <time>Present</time>
                {{/if}}
              </small>
            </span>
            {{/if}}
          </div>

          <span>{{area}}</span>
          {{#if studyType}}
          ,&nbsp<span>{{studyType}}</span>
          {{/if}}

          {{#if courses}}
          <ul class="list-inline">
            {{#courses}}<li class="badge badge-pill keyword">{{.}}</li>{{/courses}}
          </ul>
          {{/if}}
        </div>
      </li>
      {{/resume.education}}
    </ul>
  </div>
</section>
{{/if}}